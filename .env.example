# Secure API Configuration
# Copy this file to .env.local and add your actual configuration
# IMPORTANT: Never commit .env.local to version control

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_APP_NAME=Broker Analysis
VITE_APP_VERSION=1.0.0

# Authentication (Clerk)
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Database (Supabase)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Analytics (Optional)
VITE_GA_TRACKING_ID=your_google_analytics_id_here

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# Legacy Configuration (for migration - will be removed)
# Note: These are no longer used as API calls are now proxied through the secure backend
# VITE_API_KEY=your_gemini_api_key_here
# VITE_HUGGINGFACE_KEY=your_huggingface_api_key_here
# VITE_OPENROUTER_KEY=your_openrouter_api_key_here

# AI Provider Configuration (Frontend Only)
VITE_AI_PROVIDER_PRIORITY="proxy"
VITE_AI_FALLBACK_ENABLED=true
VITE_AI_RATE_LIMIT_CHECK=true
