{
  "name": "brokeranalysis",
  "version": "1.0.0",
  "description": "An AI-driven single-page web application to help traders research, compare, and select forex brokers.",
  "type": "module",
  "scripts": {
    "dev": "vite --host localhost",
    "dev:clean": "npm run clean && vite --host localhost",
    "dev:fresh": "node -e \"console.log('Use start-dev-clean.bat or start-dev-clean.ps1 instead')\" && exit 1",
    "dev:debug": "vite --config vite.config.dev.ts --host localhost",
    "dev:stable": "vite --config vite.config.stable.ts --host localhost",
    "dev:fix": "vite --config vite.config.stable.ts --host localhost --clearScreen false",
    "dev:verbose": "vite --debug hmr --host localhost",
    "dev:no-hmr": "vite --host localhost --config vite.config.no-hmr.ts",
    "start": "vite --host localhost",
    "build": "vite build --outDir dist/client && vite build --ssr prerender-entry.tsx --outDir dist/server && node scripts/prerender.js",
    "preview": "vite preview",
    "sitemap": "node scripts/generate-sitemap.js",
    "sitemap:generate": "node scripts/generateSitemap.cjs",
    "prerender": "node scripts/prerender.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run lib/**/*.test.{ts,tsx}",
    "test:integration": "vitest run src/**/*.integration.test.{ts,tsx}",
    "test:components": "vitest run src/**/*.test.{ts,tsx}",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headed": "cypress run --headed",
    "test:all": "npm run test:unit && npm run test:components && npm run test:integration",
    "test:ci": "npm run test:coverage && npm run lighthouse:ci",
    "lighthouse:ci": "lhci autorun",
    "test:api": "vitest --run tests/api/",
    "audit:data": "ts-node scripts/auditBrokerData.ts",
    "verify:cross-check": "ts-node scripts/testCrossVerifier.ts",
    "test:cross-verification": "npx ts-node scripts/runCrossVerificationTests.ts",
    "test:streamlined-verification": "npx ts-node scripts/testStreamlinedCrossVerification.ts",
    "test:complete-verification": "npx ts-node scripts/completeCrossVerificationTest.ts",
    "verify:all-brokers": "npx ts-node scripts/completeAllBrokersVerification.ts",
    "verify:database-brokers": "node scripts/verify-all-brokers.js",
    "db:migrate": "ts-node scripts/applyMigration.ts",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "quality:check": "npm run lint && npm run type-check && npm run test",
    "analyze:bundle": "npm run build && npx vite-bundle-analyzer dist/client",
    "clean": "rimraf dist node_modules/.vite .temp .tmp",
    "update-deps": "npm update && npm audit fix",
    "blog:sync": "node ../sync-blog-to-react.js sync",
    "blog:sync:force": "node ../sync-blog-to-react.js sync --force",
    "blog:status": "node ../sync-blog-to-react.js status",
    "blog:create": "cd ../blog && python create-new-blog-post.py",
    "blog:all": "npm run blog:sync && npm run dev"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.48.1",
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.2.0",
    "@hisma/server-puppeteer": "^0.6.5",
    "@mokei/mcp-fetch": "^0.4.0",
    "@playwright/mcp": "^0.0.40",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@rollup/rollup-win32-x64-msvc": "^4.52.2",
    "@supabase/supabase-js": "^2.58.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@upstash/context7-mcp": "^1.0.18",
    "@vitejs/plugin-react": "^4.3.1",
    "axios": "^1.12.2",
    "chart.js": "^4.5.0",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "ioredis": "^5.8.0",
    "jsdom": "^24.1.1",
    "lucide-react": "^0.544.0",
    "playwright": "^1.56.0-alpha-1758750661000",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.1",
      "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.1",
    "recharts": "^3.2.1",
    "redis": "^5.8.2",
    "rehype-highlight": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "serpapi": "^2.2.1",
    "tailwind-merge": "^3.3.1",
    "vite": "^5.3.4",
    "vitest": "^2.0.4"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@testing-library/dom": "^10.1.0",
    "@types/node": "^24.5.2",
    "autoprefixer": "^10.4.21",
    "cypress": "^13.6.2",
    "@lhci/cli": "^0.12.0",
    "@vitest/coverage-v8": "^2.0.4",
    "@vitest/ui": "^2.0.4",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
